      <div data-controller="close" data-close-timeout-value="3000" data-close-hidden-class="hidden" data-close-target="alert">
        <% if notice.present? %>
          <p class="z-10 h-20 bg-green-500 text-gray-200 font-semibold rounded-md px-4 absolute bottom-6 right-6 text-2xl flex items-center justify-center"><%= notice %>
            <span data-action="click->close#hide" class="ml-2 cursor-pointer">
              <%= inline_svg_tag("close.svg") %>
            </span>
          </p>
        <% elsif alert.present? %>
          <p class="z-10 h-20 bg-red-500 text-gray-200 font-semibold rounded-md px-4 absolute bottom-6 right-6 text-2xl flex items-center justify-center"><%= alert %>
            <span data-action="click->close#hide" class="ml-2 cursor-pointer">
              <%= inline_svg_tag("close.svg") %>
            </span>
          </p>
        <% end %>
      </div>