<div class="w-96 p-6 mx-auto">
  <div class="flex justify-between p-2">
    <h1 class="font-bold text-sky-600">Notification</h1>
    <div class= "text-blue-600">
      <%= link_to "Mark all as read", read_notifications_path %>
    </div>
  </div>
  <div class="p-4 rounded-lg bg-gray-400 text-white max-h-96 overflow-y-scroll">
    <ul>
      <% @notifications.unread.each do |notification| %>
      <li class="mb-6 hover:bg-[#5f0a63] ml-8">
        <%= link_to notification.message, notification.url %>
      </li>
      <% end %>
    </ul>
    <% if @notifications.unread.empty? %>
      <div class="p-4">
          You have no unread notifications
      </div>
    <% end %>
  </div>
</div>
