<div class="h-screen bg-gray-200 flex items-center justify-center">
  <div class="md:max-w-md w-full bg-gray-100 p-8 shadow-lg rounded-lg">
    <h2 class="font-bold mb-6 text-gray-600 text-center text-2xl">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
      <div class="mb-2">
        <%= f.label :email, class: "block mb-2 text-gray-600" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded-lg"  %>
      </div>
      <div class="mb-2">
        <%= f.label :password, class: "block mb-2 text-gray-600" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border rounded-lg"  %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="mb-2">
          <%= f.check_box :remember_me  %>
          <%= f.label :remember_me, class: "block mb-2 text-gray-600" %>
        </div>
      <% end %>
      <div class="flex justify-center mb-6">
        <%= f.submit "Log in", class: "cursor-pointer w-full bg-orange-600 py-2 px-4 text-white font-semibold rounded-lg shadow-md hover:bg orange-700"  %>
      </div>
    <% end %>
    <div class="text-center text-gray-600">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
