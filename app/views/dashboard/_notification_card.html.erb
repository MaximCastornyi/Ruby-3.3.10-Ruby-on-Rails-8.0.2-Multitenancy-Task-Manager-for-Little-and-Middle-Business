<div data-toggle-target="notificationCard" class="z-10 hidden bg-[#ab3c71] m-12 size-30 p-6 absolute rounded-md font-semibold capitalize h-fit w-96">
  <ul>
    <% current_user.notifications.unread.limit(10).each do |notification| %>
      <li class="mb-4">
        <%= link_to notification.message, notifications_path %>
      </li>
    <% end %>
    <% if current_user.notifications.unread.any? %>
      <li class="mb-4 rounded-md p-2">
        <%= link_to "See all", notifications_path %>
      </li>
    <% else %>
      <li class="mb-4 rounded-md p-2">
        No unread Notifications
      </li>
    <% end %>
  </ul>
</div>