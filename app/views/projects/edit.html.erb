<%= turbo_frame_tag :modal do %>
  <div class="relative">
    <div class="fixed inset-0 bg-gray-500 opacity-75"></div>
    <div class="fixed inset-0 mt-8 p-8 bg-gray-500 size-96 h-70 w-100 mx-150 rounded-md">
      <%= form_with model: @project do |form| %>
        <div class="mb-4">
        <%= form.label :project_name, class: "text-gray-200" %>
        <%= form.text_field :name, placeholder: "enter project name", class: "rounded-md bg-white h-10 p-3 text-[#5e6166] m-4" %>
        </div>

        <div class="mb-4 p-4">
          <%= form.label :assign_to_team, class: "text-gray-200 w-30" %>
          <%= form.collection_select :team_id, Team.all, :id, :name, placeholder: "enter project name", class: "rounded-md bg-white h-30 p-3 text-[#5e6166] m-4" %>
        </div>
        <%= form.submit "Update", class: "text-lg text-gray-50 bg-[#8a0e5c] p-2 cursor-pointer rounded-md hover:bg-[#ab3c71]", data: {turbo_frame: "_top"} %>
        <div class="absolute right-2 bottom-0">
          <%= button_to projects_path do %>
            <%= inline_svg_tag("close.svg", class: "text-gray-200 hover:text-gray-100 cursor-pointer text-xl") %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>